<%- include('templates/header', { title: 'Mi Perfil' }) %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl p-6">
        <div class="flex flex-col items-center">
            <h1 class="text-2xl font-bold mb-4">Perfil de Usuario</h1>

            <div class="mb-4 text-center">
                <img src="/uploads/<%= usuario.fotoPerfil %>" 
                     alt="Foto de perfil" 
                     class="w-32 h-32 rounded-full object-cover border-4 border-indigo-500 shadow-lg mx-auto">
                
                <% if (usuario.fotoPerfil && usuario.fotoPerfil !== 'default.png') { %>
                    <form action="/perfil/eliminar-foto" method="POST" class="mt-3" onsubmit="return confirm('¿Estás seguro de eliminar tu foto?');">
                        <button type="submit" class="text-red-500 text-sm font-semibold hover:text-red-700 transition">
                            <i class="fas fa-trash"></i> Eliminar foto actual
                        </button>
                    </form>
                <% } %>
            </div>

            <form action="/perfil/actualizar" method="POST" enctype="multipart/form-data" class="w-full space-y-4 mt-4">
                
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Nombre Completo</label>
                    <input type="text" name="name" value="<%= usuario.name %>" class="input-text" required>
                </div>

                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Cambiar Foto</label>
                    <input type="file" name="foto" accept="image/*" class="block w-full text-sm text-gray-500
                        file:mr-4 file:py-2 file:px-4
                        file:rounded-full file:border-0
                        file:text-sm file:font-semibold
                        file:bg-indigo-50 text-indigo-700
                        hover:file:bg-indigo-100
                    "/>
                </div>

                <button type="submit" class="btn-primary w-full">
                    Guardar Cambios
                </button>
            </form>
            
            <div class="mt-4 text-center">
                 <a href="/dashboard" class="text-gray-500 hover:underline">Volver al Dashboard</a>
            </div>
        </div>
    </div>
</div>

<%- include('templates/footer') %>