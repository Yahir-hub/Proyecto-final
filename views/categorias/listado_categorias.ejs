<%- include('../templates/header', { title: 'Listado de Categorías' }) %>

<div class="flex justify-between items-center mb-6">
    <h1 class="text-4xl font-bold text-gray-800">Categorías de Productos</h1>
    <a href="/categorias/crear" class="btn-primary">
        + Crear Nueva Categoría
    </a>
</div>

<% if (categorias.length === 0) { %>
    <div class="card text-center py-10">
        <p class="text-xl text-gray-500">Aún no hay categorías registradas.</p>
        <p class="mt-2 text-indigo-600"><a href="/categorias/crear" class="hover:underline">Comienza creando la primera.</a></p>
    </div>
<% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% categorias.forEach(categoria => { %>
            <div class="card">
                <h2 class="text-2xl font-semibold text-gray-800 mb-2"><%= categoria.nombre %></h2>
                <p class="text-gray-600 mb-4 h-12 overflow-hidden"><%= categoria.descripcion %></p>
                
                <div class="flex justify-end space-x-3">
                    <!-- Se necesitarían rutas POST/GET para la edición completa -->
                    <a href="#" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium transition">Editar</a>

                    <form action="/categorias/eliminar/<%= categoria._id %>" method="POST" onsubmit="return confirm('¿Está seguro de eliminar la categoría <%= categoria.nombre %>?');">
                        <button type="submit" class="text-red-600 hover:text-red-800 text-sm transition">Eliminar</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>


<%- include('../templates/footer') %>
