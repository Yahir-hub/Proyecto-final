<%- include('../templates/header', { title: 'Sugerencias de Compra' }) %>

<div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-red-600 mb-2">⚠️ Sugerencias de Reabastecimiento</h1>
    <p class="text-gray-600 mb-6">Listado de productos que están en su stock mínimo o por debajo.</p>

    <% if (productos.length === 0) { %>
        <div class="bg-green-100 text-green-800 p-6 rounded-xl text-center">
            <h3 class="font-bold text-xl">¡Todo excelente!</h3>
            <p>No hay productos con stock bajo en este momento.</p>
        </div>
    <% } else { %>
        <div class="bg-white rounded-xl shadow overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-red-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-bold text-red-800 uppercase">Producto</th>
                        <th class="px-6 py-3 text-center text-xs font-bold text-red-800 uppercase">Stock Actual</th>
                        <th class="px-6 py-3 text-center text-xs font-bold text-red-800 uppercase">Mínimo Requerido</th>
                        <th class="px-6 py-3 text-center text-xs font-bold text-red-800 uppercase">Faltante (para Máximo)</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% productos.forEach(p => { %>
                        <tr>
                            <td class="px-6 py-4 font-medium"><%= p.nombre %></td>
                            <td class="px-6 py-4 text-center text-red-600 font-bold"><%= p.cantidad %></td>
                            <td class="px-6 py-4 text-center text-gray-600"><%= p.minStock %></td>
                            <td class="px-6 py-4 text-center text-indigo-600 font-bold">
                                +<%= p.maxStock - p.cantidad %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="mt-6 text-center">
            <a href="/productos/restock" class="btn-primary">Ir a Resurtir Stock</a>
        </div>
    <% } %>
</div>

<%- include('../templates/footer') %>