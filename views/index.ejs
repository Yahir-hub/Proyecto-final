<%- include('./templates/header', { title: 'Punto de Venta' }) %>

<!-- ENCABEZADO Y CONTADORES DE DINERO -->
<div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
    <h1 class="text-3xl font-bold text-gray-800">Punto de Venta</h1>
    
    <div class="flex space-x-4">
        <!-- Hist√≥rico -->
        <div class="bg-indigo-600 text-white px-4 py-2 rounded-lg shadow text-center">
            <p class="text-xs opacity-75">Hist√≥rico Global</p>
            <p class="font-bold text-xl">$<%= totalVendido.toFixed(2) %></p>
        </div>

        <!-- Semana -->
        <div class="bg-blue-600 text-white px-4 py-2 rounded-lg shadow text-center">
            <p class="text-xs opacity-75">Semana (7 d√≠as)</p>
            <p class="font-bold text-xl">$<%= totalSemana.toFixed(2) %></p>
        </div>

        <!-- D√≠a -->
        <div class="bg-green-600 text-white px-4 py-2 rounded-lg shadow text-center relative group">
            <p class="text-xs opacity-75">D√≠a Actual</p>
            <p class="font-bold text-xl">$<%= totalDia.toFixed(2) %></p>
            
            <% if (user.role === 'administrador') { %>
                <form action="/ventas/reset-dia" method="POST" class="absolute -bottom-8 left-0 w-full hidden group-hover:block z-10">
                    <button type="submit" class="bg-red-500 text-white text-xs px-2 py-1 rounded w-full hover:bg-red-600 shadow-lg">Reset</button>
                </form>
            <% } %>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    
    <!-- 1. TARJETAS DE EXISTENCIAS (Lado Izquierdo) -->
    <div class="lg:col-span-2">
        <h2 class="text-lg font-bold text-gray-700 mb-3">Resumen de Existencias</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <% if (existencias && Object.keys(existencias).length > 0) { %>
                <% for (const [categoria, total] of Object.entries(existencias)) { %>
                    <div class="bg-white border-l-4 <%= total > 0 ? 'border-green-500' : 'border-red-500' %> p-4 rounded shadow-sm hover:shadow-md transition flex justify-between items-center">
                        <div>
                            <p class="text-sm font-medium text-gray-500 uppercase tracking-wide"><%= categoria %></p>
                            <p class="text-2xl font-bold <%= total > 0 ? 'text-gray-800' : 'text-red-600' %>"><%= total %></p>
                        </div>
                        <div class="text-2xl opacity-20">üì¶</div>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col-span-full bg-gray-100 p-4 rounded text-center text-gray-500">
                    No hay existencias registradas.
                </div>
            <% } %>
        </div>
    </div>

    <!-- 2. GR√ÅFICA DE BARRAS (Lado Derecho) -->
    <div class="bg-white p-4 rounded-xl shadow-lg border border-gray-100 flex flex-col justify-center">
        <h2 class="text-sm font-bold text-gray-500 uppercase mb-2 text-center">Gr√°fica de Inventario</h2>
        <div class="relative h-48 w-full">
            <canvas id="graficaInventario"></canvas>
        </div>
    </div>
</div>

<!-- MENSAJES DE SISTEMA -->
<% if (locals.mensaje) { %> <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded"><%= mensaje %></div> <% } %>
<% if (locals.error) { %> <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded"><%= error %></div> <% } %>

<!-- BUSCADOR -->
<div class="bg-white p-4 rounded-xl shadow-sm mb-6">
    <form action="/" method="GET" class="flex gap-2">
        <input type="text" name="q" value="<%= locals.searchQuery || '' %>" placeholder="Buscar producto por nombre..." class="input-text flex-grow">
        <button type="submit" class="btn-primary">Buscar</button>
        <% if (locals.searchQuery) { %>
            <a href="/" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 flex items-center transition">Limpiar</a>
        <% } %>
    </form>
</div>

<!-- TABLA DE PRODUCTOS -->
<div class="overflow-x-auto bg-white rounded-xl shadow-lg border border-gray-100">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Producto</th>
                <th class="px-4 py-3 text-left text-xs font-bold text-gray-500 uppercase tracking-wider">Precio</th>
                <th class="px-4 py-3 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">Stock</th>
                <th class="px-4 py-3 text-center text-xs font-bold text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-4 py-3 text-right text-xs font-bold text-gray-500 uppercase tracking-wider">Acci√≥n</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
            <% productos.forEach(p => { %>
                <tr class="hover:bg-indigo-50 transition duration-150">
                    <td class="px-4 py-3">
                        <div class="font-bold text-gray-900"><%= p.nombre %></div>
                        <div class="text-xs text-gray-500"><%= p.categoriaID ? p.categoriaID.nombre : 'S/C' %></div>
                    </td>
                    <td class="px-4 py-3 text-gray-600 font-medium">$<%= p.precio.toFixed(2) %></td>
                    
                    <td class="px-4 py-3 text-center">
                        <span class="font-bold text-lg <%= p.cantidad <= p.minStock ? 'text-red-600' : 'text-gray-800' %>">
                            <%= p.cantidad %>
                        </span>
                        <div class="text-[10px] text-gray-400 mt-1">
                            Min: <%= p.minStock %> | Max: <%= p.maxStock %>
                        </div>
                    </td>

                    <td class="px-4 py-3 text-center">
                        <% if (p.cantidad <= p.minStock) { %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                ‚ö†Ô∏è Bajo
                            </span>
                        <% } else if (p.cantidad >= p.maxStock) { %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                üõë Lleno
                            </span>
                        <% } else { %>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                ‚úÖ OK
                            </span>
                        <% } %>
                    </td>

                    <td class="px-4 py-3 text-right">
                        <% if (user.role === 'vendedor' || user.role === 'administrador') { %>
                            <form action="/productos/vender/<%= p._id %>" method="POST" class="inline-flex items-center justify-end gap-2">
                                <input type="number" name="cantidad" value="1" min="1" max="<%= p.cantidad %>" 
                                       class="w-16 p-1 border border-gray-300 rounded text-sm text-center focus:ring-indigo-500 focus:border-indigo-500" required>
                                <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1.5 rounded-md text-sm font-bold transition disabled:opacity-50 disabled:cursor-not-allowed"
                                    <%= p.cantidad <= 0 ? 'disabled' : '' %>>
                                    Vender
                                </button>
                            </form>
                        <% } else { %>
                            <span class="text-xs text-gray-400 italic bg-gray-100 px-2 py-1 rounded">Solo Ventas</span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
            <% if (productos.length === 0) { %>
                <tr><td colspan="5" class="px-4 py-8 text-center text-gray-500">No se encontraron productos que coincidan con la b√∫squeda.</td></tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- LIBRER√çA DE GR√ÅFICAS Y SCRIPT -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // 1. Obtener los datos desde el servidor (EJS)
    const datosExistencias = <%- JSON.stringify(existencias || {}) %>;

    // 2. Preparar etiquetas y valores para Chart.js
    const etiquetas = Object.keys(datosExistencias);
    const valores = Object.values(datosExistencias);

    // 3. Configurar la gr√°fica
    const ctx = document.getElementById('graficaInventario').getContext('2d');
    
    if (etiquetas.length > 0) {
        new Chart(ctx, {
            type: 'bar', // Tipo de gr√°fica (barras)
            data: {
                labels: etiquetas,
                datasets: [{
                    label: 'Cantidad en Stock',
                    data: valores,
                    backgroundColor: [
                        'rgba(99, 102, 241, 0.6)', // Indigo
                        'rgba(16, 185, 129, 0.6)', // Green
                        'rgba(245, 158, 11, 0.6)', // Yellow
                        'rgba(239, 68, 68, 0.6)',  // Red
                    ],
                    borderColor: [
                        'rgba(99, 102, 241, 1)',
                        'rgba(16, 185, 129, 1)',
                        'rgba(245, 158, 11, 1)',
                        'rgba(239, 68, 68, 1)',
                    ],
                    borderWidth: 1,
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } }, // Ocultar leyenda superior
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    }
</script>

<%- include('./templates/footer') %>